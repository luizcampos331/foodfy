 <!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "admin/layout.njk" %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}

  <div class="title chefs">
    <h2>Gerenciar chefs</h2>
    {% if session.isAdmin %}
      <a href="/admin/chefs/create">Novo chef</a>
    {% endif %}
  </div>

  <div class="chefs_page admin"> 
    <!-- Laço para construção das receitas baseado no array data.js -->
    {%for chef in chefs %}

      <div id="{{chef.id}}" class="chef">
        <img src="{{chef.img}}" alt="Foto de {{chef.name}}">
        <div class="infos">
          <p class="name">{{chef.name}}</p>
          <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
      </div>
      
    {% endfor %}
  </div>

{% endblock %}