 <!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "admin/layout.njk" %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}

  <div class="chefs-details">
    <div class="title">
      <h2>Chef: {{chef.name}}</h2>
      {% if session.isAdmin %}
        <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
      {% endif %}
    </div>

    <div class="info">
      <img class="avatar" src="{{chef.img}}" alt="Foto de {{chef.name}}">
      <h2>{{chef.name}}</h2>
      <p>{{chef.total_recipes}} receitas</p>
    </div>

    <h3>Receitas</h3>
    <div class="recipes-admin">

      {% for recipe in recipes %}
        <div class="recipes">
          <div class="recipe-admin">
            <img src="{{recipe.img}}" alt="Foto de {{recipe.title}}">
            <div class="texts">
              <p class="name">{{recipe.title}}</p>
              <p class="author">por {{chef.name}}</p>
              <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}