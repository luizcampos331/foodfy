<!DOCTYPE html>
<html>
  <head>
    <!-- Conteúdo será substituido caso o bloco head seja encontrado em outros arquivos -->
    {% block head %}
      <title>Foodfy - Admin</title>
    {% endblock %}

    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body class="content-admin">
    <header>
      <div class="header">
        <div class="logo">
          <a href="/admin/recipes">
            {% block logo %}
              <img src="../assets/logo-branca.png" alt="Foodfy">
            {% endblock %}
          </a>
        </div>

        <div class="links-admin">
          <a href="/admin/recipes">Receitas</a>
          <a href="/admin/chefs">Chefs</a>
        </div>
      </div>
    </header>

    <div class="content-page-admin">

      {% block content %}
      {% endblock %}

    </div>
    
    <script src="/scripts.js"></script>
  </body>
</html>