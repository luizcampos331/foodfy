{% extends "admin/layout.njk" %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}
  <div class="forms create-account">
    
    {% if user.is_admin == false %}
      <form id="form-delete" action="/admin/users?_method=DELETE" method="POST">
        <input type="hidden" name="id" value={{ user.id }}> 
        <button class="delete-button" type="submit">Deletar</button>
      </form>
    {% endif %}

    <form class="validation" action="/admin/users?_method=PUT" method="POST">

      <div class="title-create">
        <h2>Atualizar Usuário</h2>
        <div class="buttons">
          <button class="save-button" type="submit">Salvar</button>
        </div>
      </div>

      <div class="fields">
        {% include 'admin/users/fields.njk'%}
      </div>

      <input type="hidden" name="id" value={{ user.id }}> 

    </form>
  </div>

{% endblock %}