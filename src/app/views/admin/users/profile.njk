{% extends "admin/layout.njk" %}

{% block content %}
  <div class="forms account">
    <form class="validation" action="/admin/profile?_method=PUT" method="POST">

      <div class="title-create">
        <h2>Bem vindo {{user.name}}</h2>
        <div class="buttons">
          <button class="save-button" type="submit">Salvar</button>
        </div>
      </div>

      <div class="fields">
        {% include 'admin/users/profile-fields.njk'%}
      </div>

      <input type="hidden" name="id" value={{ user.id }}> 

    </form>
  </div>

{% endblock %}