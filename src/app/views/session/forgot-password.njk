{% extends 'session/layout.njk' %}

{% block content %}
  <section class="password container form">
    <form action="/session/forgot-password" method="POST">

      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div class="item">
          <h3>E-mail</h3>
          <div>
            <input 
              type="text"
              name="email"
              placeholder="Digite seu e-mail para recuperar sua senha"
              value="{{user.email}}"
              onblur="Validate.apply(this, 'isEmail')">
          </div>
        </div>
      </div>

      <button class="button" type="submit">Recuperar</button>

    </form>
  </section>
{% endblock content %}