<!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "site/layout.njk" %}

<!-- Conteúdo do bloco head irá substituir o head no layout.njk -->
{% block head %}
  <title>404 - Foodfy</title>
{% endblock %}

{% block logo%}
  <img src="../../../assets/logo.png" alt="Foodfy">
{% endblock %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}

  <div class="error">
    <h1>Erro 404</h1>
    <h3>Página não encontrada</h3>
    <p>Lamentamos o incomodo, tente alguma das páginas abaixo:</p>
    <div class="links-not-found">
      <a href="/">Home</a>
      <a href="/sobre">Sobre</a>
      <a href="/receitas">Receitas</a>
      <a href="/chefs">Chefs</a>
    </div>
  </div>

{% endblock %}