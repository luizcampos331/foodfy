<div class="item">
  <div>Imagem da receita</div>
  <input 
    type="text" 
    name="image"
    value="{{ item.image }}">
</div>

<div class="item">
  <div>Nome da receita</div>
  <input 
    type="text" 
    name="title"
    value="{{ item.title }}">
</div>

<div class="item">
  <div>Autor da receita</div>
  <input 
    type="text" 
    name="author"
    value="{{ item.author }}">
</div>

<div class="item">
  
  <div>Ingredientes</div>

  <div id="ingredients">
    {% if item.ingredients %}
      {% for ingredients in item.ingredients %}
        <div class="ingredient">
          <input 
            type="text" 
            name="ingredients[]" 
            value="{{ ingredients }}"/>
        </div>
      {% endfor %}   
    {% else %}
      <div class="ingredient">
        <input 
          type="text" 
          name="ingredients[]"/>
      </div>
    {% endif %}
  </div>

  <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

</div>

<div class="item">

  <div>Ingredientes</div>

  <div id="preparations">
    {% if item.preparation %}
      {% for preparation in item.preparation %}
        <div class="preparation">
          <input 
            type="text" 
            name="preparation[]" 
            value="{{ preparation }}"/>
        </div>
      {% endfor %}
    {% else %}
      <div class="preparation">
        <input 
          type="text" 
          name="preparation[]"/>
      </div>
    {% endif %}
  </div>

  <button type="button" class="add-preparation">Adicionar novo passo</button>

</div>

<div class="item">
  <div>Informações adicionais</div>
  <textarea name="information" value="{{ item.information }}">{{ item.information }}</textarea>
</div>