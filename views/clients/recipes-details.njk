 <!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "clients/layout.njk" %}
    
<!-- Conteúdo do bloco head irá substituir o head no layout.njk -->
{% block head %}
  <title>Detalhes da Receita - Foodfy</title>
{% endblock %}

{% block logo %}
  <img src="../assets/logo.png" alt="Foodfy">
{% endblock %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}

  <div class="recipes_details_page">
    <img src="/assets/{{ item.image }}" alt="{{ item.title }}">

    <div class="texts_center">
      <h1>{{item.title}}</h1>
      <p>{{item.author}}</p>
    </div>

    <div>
      <div class="title">
        <h3>Ingredientes</h3>
        <p class="hide1">ESCONDER</p>
      </div>
      <div class="ingredients">
        <ul>
          {% for ingredients in item.ingredients %}
            <li>{{ingredients}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div>
      <div class="title">
        <h3>Modo de preparo</h3>
        <p class="hide2">ESCONDER</p>
      </div>
      <div class="steps">
        <ul>
          {% for steps in item.preparation %}
            <li>{{steps}}</li>
          {% endfor%}
        </ul>
      </div>
    </div>

    <div>
      <div class="title">
        <h3>Informações adicionais</h3>
        <p class="hide3">ESCONDER</p>
      </div>
      <p class="information">{{item.information}}</p>
    </div>
  </div>

{% endblock %}